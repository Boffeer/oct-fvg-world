@import 'utils/fonts.styl'
@import 'utils/vars.styl'
@import 'utils/mixins.styl'
@import 'libs.styl'

picture
	width 800px
	height 400px

html
	font-size f-regular
	overflow-x hidden

body
	font-family mainFont
	// height 100%
	background-color c-bg
	color c-f
	// color clr-f
	overflow-x hidden

h1,h2,h3,h4,h5,h6
	margin 0

ul,li
	list-style-type none
	margin 0
	padding 0

p
	margin 0
	line-height 2
a
	color black
	text-decoration none

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle

textarea
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	display flex
	flex-direction column
	height 100%

.content
	flex 1 0 auto

.container
	max-width 1260px
	margin 0 auto
	// overflow-x hidden
	// overflow-x hidden

svg:hover path
	fill c-prim
	transition all 0.3s


button
	cursor pointer

@media (max-width 768px)
	html
	body
		overflow-x hidden

	.container
		max-width 95% !important
		width 95% !important
		// overflow-x hidden !important

