.exp
	padding-top 100px
	padding-bottom 150px
	display flex
	flex-wrap wrap
	&-title
		font-size: f-microtitle
		font-weight: normal
		margin-bottom 124px
		margin-left 124px
		max-width 600px
		line-height: 200%;

	.microtitle
		color clr-second
		font-size 24px
		font-weight 900
		margin-bottom 10px

	&-bullets
		display flex
		justify-content center 
		align-items center
		flex-wrap wrap
		margin 0 auto

	&-bullet
		display flex
		justify-content center
		align-items center
		flex-direction column

		// padding 38px 48px
		padding 38px 28px
		margin 0 13px 36px 13px
		min-width 332px
		max-width 27%
		// min-height 260px
		min-height 332px
		
		max-width 322px
		min-height 232px


		background-color c-surface
		border-radius 12px
		shade()


	&__img
		align-self center
		margin-bottom 16px
		// width 50px
		// height 50px

	&__descr
		text-align center
		font-weight: 600

.confetti .exp-bullets{
	justify-content: flex-start;
	margin: 0 auto;
}
.confetti .exp-bullet{
	margin-right: 13px;
	margin-left: 13px;
}
.microtitle
	color c-second

@media(max-width 480px)
	.exp
		justify-content center
		&-title
			margin-left 0
			max-width 100%
			font-size: 20px
			padding 0 17px
			margin-bottom 40px
		&-bullet
			margin-right 0
			margin-bottom 40px
			width 80%
			margin-left 0
			padding-top 0
			padding-bottom 0
	.exp-amazon
		padding-top 100px !important
			
@media (max-width 1200px) and (min-width 500px)
	.exp-title
		margin-bottom 62px
	.exp-bullet
		min-height 280px
	.cake-img
		display none
.exp-amazon
	padding-top 200px
.exp-amazon-title
	margin-bottom 42px