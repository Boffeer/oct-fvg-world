.form
	padding-top 80px
	padding-bottom 124px



.form-content
	background-color c-surface
	border-radius 12px
	display flex
	justify-content space-between
	padding 60px

.form_title
	color #fff
	font-weight 900
	font-size 32px
	span
		color c-second



.form-left
	flex-basis 60%
	margin-right 62px



.form-right
	display flex
	flex-direction column
	flex-basis 50%
.form-contacts
	display flex
	justify-content space-between
.form-buttons
	display flex
	justify-content space-between
	align-items flex-start
.form-submit
	padding 20px 45px
	padding-left: 0;
	padding-right: 0;
	width: 50%;
	margin-right: 26px;

@media (max-width 1080px)
	.form-content
		padding 20px
		flex-direction column

	.form_title
		font-size 20px

	.form_pic
		display none


	.form-left
		flex-basis 100%
		margin-right 0
		margin-bottom 32px

	.form-contacts
		flex-direction column

	.form-buttons
		flex-direction column
		align-items stretch
	.form-submit
		margin-bottom 26px
		margin-right 0
		width 100%
		

@media (min-width 500px) and (max-width 1200px)
	.form-content
		max-width: 480px;
		margin-left: auto;
		margin-right: auto;
		padding: 48px 58px;
	.form_title
		text-align center
	.gdpr
		text-align center
	




