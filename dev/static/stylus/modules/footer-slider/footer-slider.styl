.footer-bullets_blur{
	background: rgba(255, 255, 255, 0.03);
	border-radius: 26px;
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	backdrop-filter: blur(40px);
	z-index: -1;
}
