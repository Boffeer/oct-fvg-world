.footer-socials{
	background-image: url(../img/content/footer-socials.png);
	background-size: cover;
	width 1124px;
	height: 100%;
	border-radius: 26px;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	align-items: center;
	background-position-x: 190px;
	background-size: 100%;
	background-position-y: -92px;;
}

.footer-socials_texts{
	height: 100%;}
.footer-socials_inner{
	display: flex;
	justify-content: center;
	align-items: center;
	flex-direction: column;
	background: #182C42;
	width: 33%;
	height: 100%;
	border-radius: 26px 0 0 26px;;
}
.footer-socials-bullets{
	padding: 40px 40px 40px 70px
	color #fff
	overflow hidden
	position: relative;
	z-index: 2;
	font-size: 20px;
	font-weight: 600;
}

.footer-socials-bullets::before{
	content ''
	display: block;
	background: linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0) 100%), #D93621;
	background-blend-mode: overlay, normal;
	width: 10px;
	height: 200px;
	position: absolute;
	top: 30px;
	left: 35px;
	z-index: 3;
}
