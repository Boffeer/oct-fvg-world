	width 1360px !important
	display flex
	align-items center

.world
	background-color #0B0A0B
.delivery
	background-color #0A0A0C





.footer-btn
	display block
	background: linear-gradient(180deg, #FFFFFF 0%, rgba(255, 255, 255, 0) 100%), #F41814;
	background-blend-mode: overlay, normal;
	color #fff
	font-weight 600
	font-size 18px
	border-radius 60px
	padding 13px 73px
	max-width 330px
	line-height 2
	text-align center
	transition all 0.4s ease
	&:hover
		transition all 0.4s ease
		box-shadow: 0px -7.60688px 141.271px rgba(211, 49, 49, 0.3), 0px -3.17797px 59.0195px rgba(211, 49, 49, 0.215656), 0px -1.6991px 31.5546px rgba(211, 49, 49, 0.178832), 0px -0.952499px 17.6893px rgba(211, 49, 49, 0.15), 0px -0.505865px 9.39464px rgba(211, 49, 49, 0.121168), 0px -0.210502px 3.90932px rgba(211, 49, 49, 0.0843437);



.branding
	// padding 40px
	background: url('../img/content/hero-branding.png'), #000C34
	background-size cover !important
    background-position-x: -4px
	background-repeat no-repeat

.branding_inner
	// max-width 45%
	max-width 55%
	margin-left auto
	display flex
	flex-direction column
.branding_title
	position relative
	font-weight: 900;
	font-size: 61px;
	line-height: 95%;
	// text-align: center;
	color #fff
	margin-bottom 25px
	margin-left auto
	width 85%
.branding_title:after
	content ''
	display block
	width 75px
	height 8px
	background-color #FB2721
	position absolute
	left 55%
	// right 0
	bottom 10px

.branding-offer
	margin-bottom 20px
	padding-left 35px
.branding-offer_title
	font-size 27px
	position relative
	color #fff
	display flex
	align-items center
	margin-bottom 5px
	
.branding-bullet--before
	display block
	// width 110pxs
	// height 54pxs
	position relative
	margin-right 10px
	transform scale(0.8)
	top 2px
.branding-offer--web:before
	content url(../img/general/1-websites.svg)
	@extends .branding-bullet--before
.branding-offer--support:before
	content url(../img/general/2-support.svg)
	@extends .branding-bullet--before
.branding-offer--design:before
	content url(../img/general/3-design.svg)
	@extends .branding-bullet--before
.branding-offer--smm:before
	content url(../img/general/4-smm.svg)
	@extends .branding-bullet--before
.branding-offer--seo:before
	content url(../img/general/5-seo.svg)
	@extends .branding-bullet--before

.branding-offer
	position relative

