@media(max-width 480px)
	.comfort-me
		background-position center 30px
		background-size 50%
		height 220px !important
	.a-comfort-money
		display none
	.comfort
		h2
			font-size 22px
			line-height 1
		&-list
			max-width 100%
			padding 17px
			flex-direction column
		&-item
			flex-direction column
			width 100% !important
			position relative
			.comfrot-pic
				border-radius 16px 16px 0 0
			
		&__text
			transition all 0.5s
			padding 30px 40px
			font-size 16px
			border-radius 16px

		&__pic
			min-width unset
			height 100%
			height auto
			border-radius 12px 12px 0 0
			left 2px
			top 2px
			position absolute

		&-pic
			width 100%

	.comfort-item--1
		.comfort__pic
			display block
			max-height 250px
			object-fit cover
			min-width 100%
			position relative
		.comfort__text
			border-radius 0 0 16px 16px
	
	.comfort-item--2
		margin-bottom 200px
		.comfort__text
			transform translateX(140px)
		.comfort__pic
			top 1px
			height 100%
	.comfort-item--3
		.comfort__text
			transform translateX(140px)
		.comfort__pic
			top -100%
		
	.comfort-item--4
		img
			height 100%
			top: 0px;
		    border-radius: 12px 0 0 12px;
			
		.comfort__text
			transform translateX(133px)
@media (max-width 1200px) and (min-width 500px)
	.comfort-item--3 .comfort__text
		align-self flex-end
	.comfort-list
		max-width 500px
		margin 0 auto
	.comfort-item--2 .comfort__text
	.comfort-item--3 .comfort__text
		padding 41px
	.comfort-item--4 img
		height 100%
		