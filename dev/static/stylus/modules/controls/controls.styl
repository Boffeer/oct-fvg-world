.g-primary-btn
	font-size: 18px;
	font-weight: bold;
	padding: 18px 20px;
	border: none;
	border-radius: 10px;
	background: linear-gradient(180deg, rgba(0, 0, 0, 0.32) 0%, rgba(255, 255, 255, 0.4) 46.88%, rgba(0, 0, 0, 0.32) 100%), #F21D1F;
	background-blend-mode: overlay, normal;
	color: #fff;
	box-shadow: 0px 8px 0px #BF0002;
	box-shadow: 1px 4px 4px rgba(0, 0, 0, 0.23), 0px 8px 0px #A11B1B, 0px 9px 4px 3px rgba(0, 0, 0, 0.72);
	transition: all 0.3s ease-in;


.g-primary-btn:hover
	transform: translateY(6px);
	box-shadow: 1px 4px 4px rgba(0, 0, 0, 0.23), 0px 0px 0px #A11B1B, 0px 0px 9px 4px rgba(0, 0, 0, 0.82), inset 0px 2px 4px rgba(0, 0, 0, 0.35);
	background: #F21D1F;

