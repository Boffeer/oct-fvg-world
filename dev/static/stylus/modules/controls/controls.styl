.g-primary-btn
	font-weight 600
	display inline-block
	background: linear-gradient(180deg, rgba(0, 0, 0, 0.32) 0%, rgba(255, 255, 255, 0.4) 46.88%, rgba(0, 0, 0, 0.32) 100%), #F21D1F;
	background-blend-mode: overlay, normal;
	box-shadow: 0px 8px 0px #BF0002;
	border-radius 12px
	border none
	padding-top 11px
	padding-bottom 11px
	text-align center
	color c-f
	transition all 0.3s ease-in
	&:hover
		transition all 0.2s ease-in
		// box-shadow: 0px 5px 0px #BF0002;
		box-shadow: 0px 0px 30px rgba(244, 34, 36, 0.5), 0px 5px 0px #D90002;
		transform: translate(0, .275em);

.g-secondary-btn
	f-btn()
	position relative
	color c-f
	background-color transparent
	padding 10px 32px
	border 3px solid c-prim
	border-radius 12px
	transition all 0.4s ease-in
	span
		position relative
		z-index 2
	&:after
		position absolute
		background-color c-prim
		content ''
		bottom 0
		left 0
		width 100%
		// width 0
		// height 100%
		height 0
		transition all 0.3s ease-in
	&:hover
	&:focus
		background-color c-prim
		transition all 0.3s ease-in
	&:hover:after
		transition all 0.3s ease-in
		// width 100%
		height 100%


.g-input
	f-btn()

	margin 0 0 16px 0
	padding 11px 24px
	max-width 380px

	border none
	border-radius 12px
	background-color #fff
	color #232323

.g-textarea
	max-width 100%
	min-height 121px


.pop_close-btn
	position absolute
	top 1rem
	right 1rem
	border-radius 48%
	font-weight 600
	padding 0.25rem 0.5rem
	color c-f
	border none
	background none
	trans()
	&:hover
		background-color c-prim
		trans()



// slider
.slick-dots
	z-index 20
.slick-dots li button:before
	content '' !important

.slick-dots li button
	background-color #fff !important
	width 50px !important
	height 8px !important
	border-radius 8px
	opacity 0.6

.slick-dots li.slick-active button
	opacity 1
.slick-dots li
	margin 0 30px !important

@media (max-width 480px)
	.slick-dots li button
		width 30px !important
	.slick-dots li
		margin 0 20px !important

	.addlink-btn
		max-width 100%

