// fullscreen

.hero-fulscreen-menu-wrap
	display none
	height 100vh
	width 100vw
	padding 62px 0 62px 115px
	position fixed
	z-index 10000
	top 0
	background: linear-gradient(90deg, #09090A 55.76%, rgba(9, 9, 10, 0.9) 81.1%, rgba(9, 9, 10, 0.8) 89.63%, rgba(9, 9, 10, 0.6) 100%);

.hero-fulscreen-menu
	height 100%
	width 50%
	display flex
	flex-direction column
	justify-content space-around

.hero-fullscreen-menu__logo
	max-width 298px
	display inline-block

	*
		max-width 298px

.hero-fullscreen-menu__cta
	display inline-block
.hero-fullscreen-menu-nav
	display flex
	flex-direction column
.hero-fullscreen-menu__link
	color transparent
	font-size 47px
	font-weight 900
	letter-spacing 2%
	line-height 1.6
	-webkit-text-stroke 1.5px #fff
	transition all 0.3s ease
	&:hover
		color c-second
		-webkit-text-stroke 0px
		transition all 0.3s ease

.hero-fullscreen-menu-top
.hero-fullscreen-menu-bottom
	display flex
	justify-content space-between
	align-items center

.hero-fullscreen-menu-socilas
	width 50%
.hero-fullscreen-menu-socials__item
	max-height 54px
	max-width 54px
	margin-right 32px
	*
		max-height 54px
		max-width 54px

.hero-fullscreen-menu-contacts
	display flex
	flex-direction column
.hero-fullscreen-menu-contacts__item
	font-size 26px
	line-height 1.6
	font-weight 900
	color transparent
	-webkit-text-stroke 1.5px #fff
	transition all 0.3s ease
	&:hover
		color c-second
		-webkit-text-stroke 0px
		transition all 0.3s ease
.hero-fullscreen-menu-contacts--tel
	font-size 32px

.hero-menu_socials{
	width: 300px;
	display: flex;
	justify-content: space-between;
}
#hero-super-logo--mobile
	display none
.menu-logo--mobile
	display none
.menu-mobile_btn
	display none

