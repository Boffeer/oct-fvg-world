canvas
	position absolute
	top 0
	right 0
	z-index -3
.hero-slider_item--inside
	width 100vw
	height 100vh

@keyframes loader-rotate {
  100% {
    transform: rotate(360deg);
  }
}


.hero-img
	width 100vw
	position absolute
	top -100000px
	left -100000px

.preloader
	width 100vw
	height 100vh
	position fixed
	top 0
	right 0
	bottom 0
	left 0
	background-color #000
	z-index 100000000
.preloader_loader
.preloader_logo
	position absolute
	top 0
	right 0
	left 0
	bottom 0
	margin auto
.preloader_logo
	width 100px
.preloader_loader
	width 300px
	animation: loader-rotate 2s infinite ease-in-out;

.hero-socilas__item
.hero-fullscreen-menu-socilas__item
	max-width 30px
	margin-bottom 10px
	svg
		max-width 30px
	svg:hover path
		stroke red
	svg:hover .ig-path
	svg:hover .wa-path
		fill red
			


.hero
	overflow hidden
.hero-container
	height: 100vh
	// background-image url('../img/content/hero.png')
.hero-content
	position relative
	height 100vh
	z-index 3


.c-hero-super-logo
	position absolute
	top 0
	left 0
	width 100vw
	height 100vh
	z-index -1

.offer
	position absolute
	bottom 36px
	max-width 670px
	left 13vw
.headliner
	font-size 57px
	font-weight 900
	line-height 1.1
	margin-bottom 16px

.hero-contacts
	display flex
	align-items flex-start
.hero-socials
	display flex
	flex-direction column
.hero-socilas__item
	max-width 30px
	margin-bottom 10px
	*
		max-width 30px
.hero-slider
	position absolute !important
	right 0
	top 0
	width 100vw
	height 100vh
	z-index -2
.descriptor
	font-size 31px
	line-height 1.3
	margin-bottom 26px

hero-arrow-anim = 8px
@keyframes hero-arrow
	0%
		transform translateY(-hero-arrow-anim)
	50%
		transform translateY(hero-arrow-anim)
	100%
		transform translateY(-hero-arrow-anim)

.hero-cta
	background-color transparent
	border none
	margin-left 70%
	display block
	animation hero-arrow 2s ease infinite


.hero-nav
	position fixed
	z-index 100000
	top 26px
	left 26px

.hero-menu-btn
	size(25px)
	background-color transparent
	border none
	// border 4px solid c-f
	// border-radius 50%

.progress-ring
	position relative
	overflow visible !important
	transition all 0.3s ease
.progress-ring__circle{
	opacity: 0;
}

.hero-menu-btn:after
	content: ''
	width 10px
	height 10px
	border-radius 50%
	background-color c-f
	position absolute
	top 8px
	bottom 0
	right 0
	left 13px
	
.hero-menu__item
	color c-f
	font-size 22px
	font-weight 600
	margin-right 26px

.hero-img
	background linear-gradient(90.63deg, #09090A 0.53%, rgba(9, 9, 10, 0) 25.47%),  url('../img/content/footer-world.png')
	background-size cover
	width 49%
	height 100%
	position absolute
	top 0
	right 0
	z-index -2

.hero-menu-hor
	position absolute
	left 52px
	top -10px
	transition all 0.6s ease

.hero-menu-hor--active
	left -500px

.hero-menu-ver
	transform rotate(-90deg)
	position absolute
	left -110px
	top 122px
	transition all 0.3s ease

.hero-menu-ver--active
	top -500px

.hero-contacts
	position absolute
	right 26px
	top 15px

.hero-phone
	padding-top 3px
	margin-right 20px
