main {
	position: relative;
	width: 100%;
	height: 100vh;
	position absolute
	top 0
	left 0
	z-index -5
}
#slider {
	width: 100%;	
	// max-width: 1200px;
	height: 100%;
	margin: 0 auto;
	position: relative;
}
canvas
	width: 150%;
	height: 150%;
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%) scale(1.2);
	z-index: 3;
	
main:after
	content ''
	display block
	position absolute
	top 0
	left 0
	width 50%
	height 100%
	background-color #0b090b
	z-index 4
	
.hero-slider-pic {
	width: 100%;
	max-width: 100%;
	height 100vh
	position: absolute;
	z-index: 0;
	top -100000px
	left -10000px
}
