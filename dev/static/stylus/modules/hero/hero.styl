hero-arrow-anim = 8px
@keyframes hero-arrow
	0%
		transform translateY(-hero-arrow-anim)
	50%
		transform translateY(hero-arrow-anim)
	100%
		transform translateY(-hero-arrow-anim)

.hero-cta
	background-color transparent
	border none
	margin-left 70%
	display block
	animation hero-arrow 2s ease infinite


.hero-nav
	position fixed
	z-index 100000
	top 26px
	left 26px

.hero-menu-btn
	background-color transparent
	border none
	padding 0
	position absolute
	top -16px
	left -5px
	// border 4px solid c-f
	// border-radius 50%

.progress-ring
	position relative
	overflow visible !important
	transition all 0.3s ease
	width 30px
	height 30px
	top 0
	left 0
	padding-top 10px
	padding-left 10px
	z-index 100000000
.progress-ring__circle{
	opacity: 0;
}
.hero-nav--hidden:after {
	content: '';
	display block
	width 40px
	height 40px
	background-color #0b090b
	// background-color red
	// background-blend-mode multiply
	position absolute
	left -29px
	top -29px
	z-index 100
}
.hero-nav--hidden:before {
	content: '';
	display block
	width 40px
	height 28px
	background-color #0b090b
	// background-color red
	// background-blend-mode multiply
	position absolute
	left -0px
	top -29px
	z-index 100
}

.hero-menu-btn:after
	content: ''
	width 10px
	height 10px
	border-radius 50%
	background-color c-f
	position absolute
	top 17px
	left 17px
	box-sizing: content-box;
.hero-menu-btn--hidden:after
	border: 13px solid #0b090b;
	// border-color red
	top: 3px;
	left: 4px;
.hero-menu-btn:hover .hero-menu-btn:after
	background-color c-prim
	
.hero-menu__item
	color c-f
	font-size 22px
	font-weight 600
	margin-right 26px

