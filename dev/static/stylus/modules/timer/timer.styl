.timer_time
	// width 264px
	// width 164px
	width 45%
	height 264px
	height 164px
	border-radius 16px
	font-weight 900
	display flex
	flex-direction column
	align-items center
	justify-content center
	background-color c-bg
	border-top 20px transparent solid
	padding-bottom 20px
	margin-rigth 10px
	margin-left 10px

.time_remains
	font-size 50px

.timer_title
	font-size 24px
	color c-second

.timer
	display flex
	justify-content space-around
	justify-content center
	flex-wrap wrap
	max-width 50%
	
	// margin-bottom 62px

.timer-content
	display flex
	max-width 1100px
	background-color c-surface
	justify-content space-evenly
	padding 70px
	border-radius 16px
	margin 0 auto


.section_title
	text-align center
	font-size 48px
	line-height 1.2

.days-timer
	position relative
	border-top 20px c-prim solid
.days-timer:before
	content ''
	display block
	position absolute
	top -30px
	left 0
	width 100%
	height 30px
	background-size cover
	background-image url('../img/general/calendar.svg')


.timer-section_title
	max-width 800px
	text-align left
	font-weight 900
	max-width 529px
	margin-bottom 44px
	font-size 46px
	line-height 1.2

.timer-btn
	max-width 100%
	max-width 330px
	margin 0 auto
	width 100%
	// padding: 20px 45px;
	padding-top 20px
	padding-bottom 20px
	padding-left 40px
	padding-right 40px
	// height 50px
.minutes:before
.seconds:before
	content ':'
	margin-right 5px




.timer-offer
	max-width 50%







@media (max-width 1080px)
	.timer
		flex-wrap wrap
		margin-bottom 30px
		max-width 100%
	.timer-content
		padding 26px
		flex-direction column-reverse
	.timer-offer
		max-width 100%
		margin-bottom 30px
		
	.timer_time
		padding-top 10px
		height auto
		margin 5px
	.time_remains
		font-size 30px
	.timer_title
		font-size 14px
	.timer-section_title
		font-size 24px
		margin-bottom 15px
	.days-timer:before
		height 20px
		top -20px
	.days-timer
		border-top 15px c-prim solid
	.timer-btn
		padding-right 0
		padding-left 0



@media (max-width 1200px) and (min-width 500px)
	.timer_time
		width 18%
	.time_remains
		font-size 50px
	.timer-section_title
		max-width 600px

