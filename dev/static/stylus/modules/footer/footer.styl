.footer{
	background-color: #000;
	align-items: center;
	padding-bottom 40px
}
footer
	padding-top 160px
	// padding-bottom 40px
	display flex
	justify-content space-around
	position relative
footer:after
	position absolute
	content ''
	display block
	width 100%
	height 10px
	bottom 2px
// 	position absolute

.footer-logo
	margin-top 0
	margin-bottom 13px
.footer-logo_container
	display flex
	flex-direction column
	margin-bottom 25px

.footer-logo_descriptor
	text-align center
	color #fff
	opacity 0.8
	font-size 12px
	line-height 1.4
	
.footer-logo_container:hover .footer-logo_descriptor
	color clr-prim



.footer_link
	color #fff
	opacity 0.8
	font-size 14px
	margin-bottom 10px
	font-weight 400
	trans()
.footer_link:hover
	color c-prim
	trans()
.footer-socials-icons
	display flex
	justify-content space-around
	width 250px
	align-self center
	margin-top 6px
	// padding-bottom 23px
	// padding-top 22px
.footer-links{
	display flex
	justify-content: space-between;
	flex-basis: 38%;
	padding-top 15px
	align-items center
}
.footer-links-1
	display flex
	flex-direction column
	margin-right 26px
.footer-links-2
	display flex
	flex-direction column
	

.socials_item
	margin-right 16px
	max-height 80px
.socials_item:last-child
	margin-right 0

.footer .hero-socials_icon:hover path
	fill c-prim !important
	stroke c-prim !important
	trans()



.footer-socials-icons__item
	display flex
	align-items flex-end

.footer-socials-icons__item svg
	width 42px
	height 42px
	align-self flex-end
	


	





@media (max-width 1080px)
	footer
		flex-direction column
		align-items center
	.footer-logo_container
		margin-bottom 26px
	.footer-links-1
		margin-right 0
	.footer-links
		flex-direction column
		align-items center
		text-align center
		margin-bottom 26px
	
	.footer-socials-icons
		width 100%


@media (max-width: 1600px) and (min-width: 1400px)
	.footer
		.container
			max-width 100%